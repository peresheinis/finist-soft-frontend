FROM node:latest

# Указываем рабочую директорию в контейнере
WORKDIR /app

# Копируем файлы package.json и package-lock.json в контейнер
COPY package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем все файлы проекта в контейнер
COPY . .

# Собираем проект (здесь предполагается, что сборка создает папку "dist")
RUN npm run build

# Указываем порт, который контейнер будет использовать
EXPOSE 4173

# Команда, которая будет выполнена при запуске контейнера
CMD ["npm", "run", "preview"]